{
  "name": "wasm-arcade",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "High-performance mini games arcade powered by WebAssembly and C++",
  "keywords": ["WASM", "WebAssembly", "games", "arcade", "C++", "React", "TypeScript", "mini-games"],
  "author": "Zyrex24, DIEMOS192",
  "license": "MIT",
  "homepage": "https://symbol-arcade.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/Zyrex24/symbol-arcade.git"
  },
  "scripts": {
    "prebuild": "node scripts/build-wasm.mjs",
    "dev": "vite",
    "dev:watch": "concurrently \"bun run wasm:watch\" \"vite\"",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "wasm:build": "node scripts/build-wasm.mjs",
    "wasm:clean": "rimraf wasm_build public/wasm && node scripts/build-wasm.mjs",
    "wasm:watch": "nodemon --watch cpp --ext cpp --exec \"node scripts/build-wasm.mjs\""
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react-swc": "^3.10.2",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4"
  },
  "trustedDependencies": [
    "@swc/core"
  ]
}
